   #include <stdio.h>
#include <string.h>

#define MAX_LEN 1000
#define MAX_RAILS 100

int main() {
    char str[MAX_LEN];
    int rails;

    printf("Enter a Secret Message: ");
    fgets(str, MAX_LEN, stdin);

    printf("Enter number of rails: ");
    scanf("%d", &rails);

    int len = strlen(str);
    int i, j, count = 0;

    for (i = 0; i < len; i++) {
        if (str[i] == '\n') {
            str[i] = '\0';  
            break;
        }
    }

    for (i = 0; i < rails; i++) {
        for (j = i; j < len; j += (rails - 1) * 2) {
            printf("%c", str[j]);
            if (i > 0 && i < rails - 1) {
                int k = j + (rails - i - 1) * 2;
                if (k < len)
                    printf("%c", str[k]);
            }
        }
    }

    printf("\n");

    return 0;
}  
